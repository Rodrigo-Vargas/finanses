<% content_for :content do %>
  <header  ng-controller="HeaderCtrl">
    <div class="row">
      <div class="mobile-menu visible-xs pull-left col-xs-2">
        <a ng-click="toogleMenu()">
          <i class="fa fa-bars"></i>
        </a>
      </div>
      <div class="logo col-xs-10 col-sm-2 col-lg-1">
        <a class="" href="/">Finan$es</a>
      </div>
      <div class="user-info-wrapper col-xs-12 col-sm-offset-6 col-sm-4 col-lg-offset-7">
        <!-- Single button -->
        <div class="btn-group">
          <span>Olá </span>
          <a type="button" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {{ currentUserInfo.name }} <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a ng-click="logout()">Sair</a></li>
          </ul>
        </div>

      </div>
    </div>
  </header>

  <div class="row">
    <aside class="hidden-xs side-nav col-sm-2 col-lg-1">
      <ul>
        <li class="active"><a href="/">Lançamentos</a></li>
        <li><a href="/importadores">Importadores</a></li>
        <li><a href="/categorias">Categorias</a></li>
      </ul>
    </aside>

    <div class="col-sm-10 col-lg-11">
      <%= yield %>
    </div>
  </div>  
<% end %>

<%= render template: "layouts/application" %>